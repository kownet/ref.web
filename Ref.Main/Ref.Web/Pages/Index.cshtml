@page
@model IndexModel

<div class="card-deck mb-3">

    <div class="card mb-4 bg-light">
        <div class="card-body">
            <div class="text-center">
                <div asp-validation-summary="All"></div>
                <form class="form-signin" method="post">
                    <input asp-for="UserViewModel.Email" type="email" class="form-control" placeholder="Adres email" required autofocus>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Zakładam konto</button>
                </form>
            </div>
        </div>
        
    </div>

    <div class="card border-danger mb-4 text-left">
        <div class="card-body">
            <h5 class="card-title">Cechy narzędzia</h5>
            <h6 class="card-subtitle mb-2 text-muted">wyszukiwanie mieszkania, domu wg.</h6>
            <p class="card-text">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">miasta</li>
                    <li class="list-group-item">dzielnicy</li>
                    <li class="list-group-item">ceny</li>
                    <li class="list-group-item">powierzchni</li>
                    <li class="list-group-item">ceny za m<sup>2</sup></li>
                    <li class="list-group-item">wymaganej frazy np. "do remontu", "gotowiec inwestycyjny"</li>
                    <li class="list-group-item">zabronionej frazy np. "bez PCC", "od dewelopera"</li>
                    <li class="list-group-item">oferty agencyjne i/lub prywatne</li>
                </ul>
            </p>
        </div>
    </div>

    <div class="card mb-2 text-center">
        <img class="card-img-top img-fluid" src="~/img/PM.png" alt="PewneMieszkanie - Logo" />
        <div class="card-body">
            <h5 class="card-title">PewneMieszkanie.pl</h5>
            <p class="card-text">Śledzimy rynek nieruchomości dla Ciebie.</p>
        </div>
    </div>

</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Ceny</h1>
    <p class="lead">Zapraszamy do zapoznania się z ofertą cenową i skorzystania z usługi.</p>
</div>

<div class="card-deck mb-3 text-center">
    <div class="card border-dark mb-3 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Test</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title pricing-card-title">0 zł <small class="text-muted">/ 24 h</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
                <li>1 monitorowany filtr</li>
                <li>rynek wtórny</li>
                <li><strong>natychmiastowe powiadomienia</strong></li>
                <li>gwarancja satysfakcji</li>
                <li>&nbsp;</li>
            </ul>
            <a href="https://pewnemieszkanie.pl" role="button" class="btn btn-lg btn-block btn-outline-primary">Wypróbuj</a>
        </div>
    </div>
    <div class="card border-warning mb-3 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Standard</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title pricing-card-title">79,00 zł <small class="text-muted">/ msc</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
                <li>3 monitorowane filtry</li>
                <li>rynek wtórny</li>
                <li>natychmiastowe powiadomienia</li>
                <li>gwarancja satysfakcji</li>
                <li><strong>wsparcie użytkownika</strong></li>
            </ul>
            <a href="mailto:tomek@kownet.info" role="button" class="btn btn-lg btn-block btn-primary">Zapytaj o dostęp</a>
        </div>
    </div>
    <div class="card border-success mb-3 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Premium</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title pricing-card-title">869,00 zł <small class="text-muted">/ rok</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
                <li><strong>4 monitorowane filtry</strong></li>
                <li>rynek wtórny</li>
                <li>natychmiastowe powiadomienia</li>
                <li>gwarancja satysfakcji</li>
                <li>wsparcie użytkownika</li>
            </ul>
            <a href="mailto:tomek@kownet.info" role="button" class="btn btn-lg btn-block btn-primary">Zapytaj o dostęp</a>
        </div>
    </div>
</div>